<h2 class="mt-5 mb-3">Transaction History</h1>

<section class="py-5 text-center container">
  <div class="row py-lg-5">
    <div class="col-lg-12 col-md-12 mx-auto">

      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Transaction Type</td>
            <th scope="col">Source Wallet Address</th>
            <th scope="col">Destination Wallet Address</th>
            <th scope="col">Amount</th>
            <th scope="col">Created At</th>
          </tr>
        </thead>
        <tbody>
          <%@transactions.each do |transaction|%>
            <tr>
              <th scope="row"><%= transaction.id %></th>
              <td><%= transaction.transaction_type.transaction_type %></td>
              <td><%= transaction.source_wallet_id %></td>
              <td><%= transaction.destination_wallet_id %></td>
              <td><%= transaction.amount %></td>
              <td><%= transaction.created_at.strftime("%Y-%m-%d %H:%M") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</section>
